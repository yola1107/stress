version: "3.8"

services:
  redis:
    image: redis:7-alpine
    container_name: redis
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - ./conf/redis.conf:/usr/local/etc/redis/redis.conf:ro
      - ./data:/data
    command: ["redis-server", "/usr/local/etc/redis/redis.conf"]
    sysctls:
      - net.core.somaxconn=65535
    ulimits:
      nofile:
        soft: 102400
        hard: 102400